set shell := ["bash", "-cu"]
set dotenv-load

default:
  just --list

run-backend:
    @-pkill -f backend.py
    uv run fastapi run "BUI/backend.py"

run-frontend:
    @-pkill -f front.py
    uv run streamlit run "BUI/front.py"

run-TUI:
    @-pkill -f tui.py
    uv run TUI/tui.py


